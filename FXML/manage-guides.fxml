<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>

<VBox alignment="CENTER" spacing="15" styleClass="main-container" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.touristattraction.ManageGuidesController">
    <Label fx:id="headerLabel" text="Manage Guides" styleClass="header"/>
    <Label fx:id="nameLabel" text="Full Name:" styleClass="label"/>
    <TextField fx:id="fullNameField"/>
    <Label fx:id="emailLabel" text="Email:" styleClass="label"/>
    <TextField fx:id="emailField"/>
    <Label fx:id="nationalityLabel" text="Nationality:" styleClass="label"/>
    <TextField fx:id="nationalityField"/>
    <Label fx:id="ageLabel" text="Age:" styleClass="label"/>
    <TextField fx:id="ageField"/>
    <Button text="Add Guide" onAction="#addGuide" styleClass="btn"/>
    <Button text="Edit Guide" onAction="#editGuide" styleClass="btn"/>
    <Button text="Update Guide" onAction="#updateGuide" styleClass="btn"/>
    <Button text="View Guides" onAction="#viewGuides" styleClass="btn"/>
    <Button text="Back to Home" onAction="#goToHome" styleClass="btn"/>
    <Button text="Login" onAction="#goToLogin" styleClass="btn"/>
    <Button text="Sign Up" onAction="#goToSignUp" styleClass="btn"/>
    <Button text="About Us" onAction="#goToAboutUs" styleClass="btn"/>
    <Button text="Manage Attractions" onAction="#goToManageAttractions" styleClass="btn"/>
    <Button text="View Tourists" onAction="#goToViewTourists" styleClass="btn"/>
    <ListView fx:id="guideListView" prefHeight="200"/>
</VBox>