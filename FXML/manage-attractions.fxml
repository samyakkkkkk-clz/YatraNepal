<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>

<VBox alignment="CENTER" spacing="15" styleClass="main-container" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.touristattraction.ManageAttractionsController">
    <Label fx:id="headerLabel" text="Manage Attractions" styleClass="header"/>
    <Label fx:id="nameLabel" text="Attraction Name:" styleClass="label"/>
    <TextField fx:id="attractionNameField"/>
    <Button text="Add Attraction" onAction="#addAttraction" styleClass="btn"/>
    <Button text="Back to Home" onAction="#goToHome" styleClass="btn"/>
    <Button text="Login" onAction="#goToLogin" styleClass="btn"/>
    <Button text="Sign Up" onAction="#goToSignUp" styleClass="btn"/>
    <Button text="About Us" onAction="#goToAboutUs" styleClass="btn"/>
    <Button text="Manage Guides" onAction="#goToManageGuides" styleClass="btn"/>
    <Button text="View Tourists" onAction="#goToViewTourists" styleClass="btn"/>
    <ListView fx:id="attractionListView" prefHeight="200"/>
</VBox>